{
    "manifest_version": 3,
    "name": "YouDefineTube",
    "version": "1.0",
    "description": "Customize YouTube homepage to focus on specific learning topics.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://www.googleapis.com/*"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": ["content2.js"],
            "css": ["content.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*.png"],
            "matches": ["*://*.youtube.com/*"]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}